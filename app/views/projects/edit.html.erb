<div class="sign_up_whole">
  <h2 class="subheading">Edit Project</h2>

    <% if @project.user == current_user %>
      <%= form_for(@project) do |f| %>
        <div class="field">
          <%= f.label :title, :class => "sign_up_heading" %><br/>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <%= f.label :description, :class => "sign_up_heading" %><br/>
          <%= f.text_field :description %>
        </div>

        <div class="field">
          <%= f.label :supplies, :class => "sign_up_heading" %><i>(please separate supplies by semicolon)</i><br/>
          <%= f.text_field :supplies %>
        </div>

        <div class="field">
          <%= f.label :project_photo, "Project Photo", :class => "sign_up_heading" %><br />
          <%= f.file_field :project_photo %>
        </div>

        <div class="field">
          <%= f.label :category, :class => "sign_up_heading" %>
          <%= f.select :category, options_for_select(@categories), :selected => @project.category  %>
        </div>

        <div class="actions">
          <%= f.submit "Update Project", class: "sign-in-buttons" %>
        </div>
      <% end %>
    <% end %>
</div>

<div class="delete-buttons">
  <%= link_to "Delete Project", @project, method: :delete %>
</div>
