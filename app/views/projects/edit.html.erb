<% if @project.user == current_user %>
  <%= form_for(@project) do |f| %>
    <div class="field">
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %><br/>
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :supplies %><br/>
      <%= f.text_field :supplies %>
    </div>

    <div class="field">
      <%= f.label :project_photo, "Project Photo", :class => "sign_up_heading" %><br />
      <%= f.file_field :project_photo %>
    </div>

    <div class="field">
      <%= f.label :category %>
      <%= f.select :category, options_for_select(@categories), :selected => @project.category  %>
    </div>

    <div class="actions">
      <%= f.submit "Update Project" %>
    </div>
  <% end %>
<% end %>

<%= link_to "Delete Project", @project, method: :delete %>
